import java.util.Scanner;
import java.time.LocalDate;



public class Main {
    public static void main(String[] args){

    /*
    add date feature = originalDate into main programme
    to compare dates for validation

    */
        LocalDate originalDate = LocalDate.now();

        debitCreditTransaction(); //call for transaction process
        dateValidation(originalDate); //call for date validation process

    }
    public static void debitCreditTransaction(){

        String description; //desc input
        boolean descTrue;
        //used as while loop for description
        descTrue = true;

        boolean credTrue, debTrue;
        //used as while loop for credit n debit transferring
        credTrue = true;
        debTrue = true;

        Scanner g = new Scanner(System.in);
        System.out.print("Enter credit or debit : ");
        int transaction_type = g.nextInt(); //sub-menu selection input

        switch (transaction_type){
        /*
        'temporary' switch case to lead user to selected sub-menu
        later can be combined with other cases
        */
            case 1 :

                while(credTrue){
                    Scanner amCred = new Scanner (System.in);
                    System.out.print("Enter amount: ");
                    double amount = amCred.nextDouble(); //amount for credit transaction

                    if(amount>0 && amount<100000){
                        //add in database for sql here
                        credTrue = false;
                    }else{
                        System.out.println("Please enter a valid amount.");
                    }
                }

                Scanner descCred = new Scanner(System.in);
                System.out.print("Enter description: ");
                description = descCred.nextLine();

                while(descTrue){
                    if(description.length()>100 ){ //case: user writes over 100 for description
                        System.out.println("Oh no, you have exceeded our maximum count. Please try again.");

                    }else {
                        System.out.println("");//add in database for sql here
                        descTrue = false;

                        System.out.println("Credit Successfully Recorded!!!");

                    }

                }break;

            case 2 :

                while(debTrue){
                    Scanner amDeb = new Scanner (System.in);
                    System.out.print("Enter amount: ");
                    double amount = amDeb.nextDouble(); //amount for debit transaction

                    if(amount>0 && amount<100000){
                        //add in database for sql here
                        debTrue = false;
                    }else{
                        System.out.println("Please enter a valid amount.");
                    }
                }

                Scanner descDeb = new Scanner(System.in);
                System.out.print("Enter description: ");
                description = descDeb.nextLine();//description input

                while(descTrue){
                    if(description.length()>100 ){// case : user writes description over 100
                        System.out.println("Oh no, you have exceeded our maximum count. Please try again.");

                    }else {
                        System.out.println("");//add in database for sql here
                        descTrue = false;
                        System.out.println("Debit Successfully Recorded!!!");

                    }

                }break;

        }
    }
    public static void dateValidation(LocalDate originalDate){
        LocalDate currentDate = LocalDate.now();
        //currentDate is date generated by system during transaction
        //originalDate is date generated by system after login
        if (originalDate.isEqual(currentDate)){

        }else {
            System.out.println("Transaction denied due to error.");
        }

    /*
    add date feature = originalDate into main programme
    to compare dates for validation

    */
    }
}
